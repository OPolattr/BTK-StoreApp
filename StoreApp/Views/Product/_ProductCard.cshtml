@model Product



<div class="col-sm-12 col-md-4 col-xl-3 my-2">
    <div class="card" style="width: 18rem;">
        <img src="/Images/bilgisayar.jpeg" class="card-img-top" alt="...">
        <div class="card-body">
            <h5 class="card-title">@Model.ProductName</h5>
            <p class="card-text">@Model.ProductPrice.ToString("c")</p>
            <a class="btn btn-primary" asp-action="Get" asp-route-id="@Model.ProductId">
                <i class="fa-solid fa-arrow-right"></i>
             Get Details
            </a>
  </div>
</div>
</div>